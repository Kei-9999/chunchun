<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container px-5 px-sm-0">
　<div class="row">
   <div class="col-md-3">
     <h2>User info</h2>
       <%= attachment_image_tag @user, :user_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
         <tbody>
           <tr></tr>
            <tr>
  	         <th>name</th>
  	          <br>
  	          <th><%= @user.name %></th>
           </tr>
           <tr>
  	        <th>introduction</th>
  	        <br>
  	        <th><%= @user.introduction %></th>
           </tr>
           <tr>
            <th>follows</th>
             <td>
              <%= link_to user_relationship_follow_path(@user) do %>
              <%= @user.followings.count %>
              <% end %>
             </td>
           </tr>
            <th>followers</th>
            <td>
              <%= link_to user_relationship_follower_path(@user) do %>
              <%= @user.followers.count %>
              <% end %>
            </td>
          <tr>
            <td>
             <% if @user.id != current_user.id %>
              <% if current_user.following?(@user) %>
               <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
              <% else %>
               <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
              <% end %>
             <% end %>
           </td>
         </tr>

      </tbody>
     </table>

   <div class="row">
    <% if @user.id == current_user.id %> 
     <%= link_to "",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"  %>
    <% end %>
   </div>
  </div>
 
 <!--右側-->
      <div class="col-md-8">
        <h2>Posts</h2>
          <table class="table table-hover table-inverse">
           <thead>
            <tr>
            
             <th>Photo</th>
             <th class="title-left">Column</th>
             <th colspan="3"></th>
            </tr>
           </thead>
       <tbody>
        <% @user.posts. each do |post| %><tr>

　　　　　　<td><%= link_to post_path(post) do %>
                <%= attachment_image_tag post, :post_image, size: "400x300", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
　          </td>

            <td class="post-column"><%= post.post_detail %></td>
            
　　　　　　<td></td>

          </tr>
           <% end %>

       </tbody>
      </table>
    </div>
  </div>
</div>