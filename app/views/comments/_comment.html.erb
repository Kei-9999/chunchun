<div class="comments">
 <p>コメント件数：<%= post.comments.count %></p>
 <% post.comments.each do |comment| %>

<div class="card text-center mb-3">
  
  <div class="card-header" style="height: 50px;">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <p>
           <%= link_to user_path(post.user) do %>
           <%= attachment_image_tag comment.user, :user_image, size: "35x35", fallback: "no_image.jpg", size: "35x35" %><br>
           <% end %>
        </p>
         
            <li class="nav-item">
               <%= comment.user.name %>
             </li>
             <li>
              <%= "♡" %>
             </li>
              <li class="nav-item">
               <%= comment.created_at.strftime('%Y/%m/%d') %>
             </li>
             <li>
              <%= "♡" %>
             </li>
            <li class="nav-item">
             
              <% if comment.user == current_user %>
                <div class="comment-delete">
                    <%= link_to "とりさげる", post_comment_path(comment.post, comment), class: "nae-btn", method: :delete, remote: true%>
                </div>
              <% end %>
             
           </li>
        </li>
    </ul>
  </div>
  <div class = "card-body">
   <div class = "card-text text-left">
    <%= comment.comment %>
   </div>
  </div>
  

  <% end %>
 </div>
</div>

