<div class="container px-1 px-sm-0">
 <h1>♡ぶんちょう♡</h1>
 <div class="row">
  <div class="col-md-6">
    <%= attachment_image_tag @post, :post_image, size: "500x400", format: 'jpeg' %>
  
   <br>
   <br>
     <% if @user.id != current_user.id %>
     <div id="likes_buttons_<%= @post.id %>">
      <%= render 'likes/like', post: @post %>
     </div>
      <% else %>
      <p>♥<%= @post.likes.count %>いいね</p>
      <% end %>
      <div id="kawaii_buttons_<%= @post.id %>">
      <%= render 'kawaiis/kawaii', post: @post %>
      </div>
  </div>


<!--右側-->  
  <div class="col-md-6">
   <div class="col-md-30">
     <h2>エピソード</h2>
        <br>
         <%= @post.post_detail %>
        <br>
         <% if @user.id == current_user.id %>
          <td><%= link_to "書き加える", "/posts/#{@post.id}/edit", class: "moe-btn" %></td>
          <td><%= link_to "バイバイする", "/posts/#{@post.id}", class: "nae-btn",method: :delete %></td>
         <% end %>
        <br>
       
       <div id="new-comment">
         <%= render partial: 'comments/comment', locals: { post: @post} %>
       </div>
        <br>
       <div>
         <%= form_with(model:[@post, @new_comment], url: post_comments_path(@post.id)) do |f| %>
         <%= f.text_area :comment, rows:'10',cols:"50",placeholder: "コメントをここに", id:"text_area" %>
         <br>
         <%= f.submit "声援をおくる", id:"comment_submit", class: "moe-btn" %>
         <% end %>
       </div>
            
       
    </div>
   </div>




