<h1>All Posts投稿一覧</h1>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <h2>posts</h2>


 <table class="table table-hover table-inverse">

   <thead>
     <tr>
 　　 <th>User</th>
      <th>Photo</th>
      <th>Column</th>
      <th colspan="3"></th>
     </tr>
   </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
          　<td>
             <%= link_to user_path(post.user) do %>
　　          <%= attachment_image_tag post.user, :user_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
             <% end %>
            </td>
            <td>
             <%= link_to posts_path(post.user) do %>
              <%=  attachment_image_tag post, :post_image, size: "300x200", format: 'jpeg', fallback: "no_image.jpg"  %>
             <% end %>
            </td>   
            <td><%= post.post_detail %></td>
