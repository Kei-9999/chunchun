  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
 <div class="container px-5 px-sm-0">
  
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>私のかわいい文鳥♡</h2>
   <div class="img_field">
    <%= form_with model: @post,url: posts_path,local:true do |f| %>
      <dt><%= f.label :文鳥写真,class: "control-label"  %></dt>
      <dd><%=f.attachment_field :post_image %></dd>
    <div class="group">
        <dt><%= f.label :エピソード,class: "control-label" %></dt>
        <dd><%= f.text_area :post_detail, size: "30x10", class: "form-control" %></dd>
        <p><%= f.submit "自慢する！", class: "moe-btn" %></p>
    </div>
   <% end %>
  </div>
 </div>
 </div>
</div>


